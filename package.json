{
  "name": "modern-express-auth",
  "version": "1.0.0",
  "description": "Production-ready Express.js authentication API with JWT dual-token system, comprehensive security features, centralized constants, and extensive test coverage. Built with modern JavaScript, MongoDB, and industry best practices.",
  "main": "server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuntps/modern-express-auth.git"
  },
  "homepage": "https://github.com/shuntps/modern-express-auth#readme",
  "bugs": {
    "url": "https://github.com/shuntps/modern-express-auth/issues"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "express",
    "authentication",
    "jwt",
    "mongodb",
    "nodejs",
    "api",
    "security",
    "auth",
    "backend",
    "rest-api",
    "session-management",
    "bcrypt",
    "rate-limiting",
    "middleware",
    "mongoose",
    "zod-validation",
    "winston-logging",
    "jest-testing",
    "production-ready",
    "enterprise",
    "dual-token",
    "refresh-token",
    "access-token",
    "role-based-access",
    "cors",
    "helmet",
    "cookie-parser",
    "centralized-constants",
    "ci-cd",
    "github-actions",
    "eslint",
    "prettier"
  ],
  "author": "Shunt",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.16.5",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "helmet": "^8.1.0",
    "zod": "^4.0.10",
    "winston": "^3.17.0",
    "express-rate-limit": "^8.0.1",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "models/**/*.js",
      "validations/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
