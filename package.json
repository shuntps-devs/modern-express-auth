{
  "name": "modern-express-auth",
  "version": "1.1.0",
  "description": "Production-ready Express.js authentication API with JWT dual-token system, comprehensive security features, centralized constants, and extensive test coverage. Built with modern JavaScript, MongoDB, and industry best practices.",
  "main": "server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuntps/modern-express-auth.git"
  },
  "homepage": "https://github.com/shuntps/modern-express-auth#readme",
  "bugs": {
    "url": "https://github.com/shuntps/modern-express-auth/issues"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "setup:resend": "node scripts/setup_resend.js",
    "test:email": "node scripts/test_email_config.js",
    "test:email:ci": "node scripts/ci_email_test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "express",
    "authentication",
    "jwt",
    "mongodb",
    "nodejs",
    "api",
    "security",
    "auth",
    "backend",
    "rest-api",
    "session-management",
    "bcrypt",
    "rate-limiting",
    "middleware",
    "mongoose",
    "zod-validation",
    "winston-logging",
    "jest-testing",
    "production-ready",
    "enterprise",
    "dual-token",
    "refresh-token",
    "access-token",
    "role-based-access",
    "cors",
    "helmet",
    "cookie-parser",
    "centralized-constants",
    "ci-cd",
    "github-actions",
    "eslint",
    "prettier"
  ],
  "author": "Shunt",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "resend": "^4.7.0",
    "winston": "^3.17.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^30.0.5",
    "babel-jest": "^29.7.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4"
  }
}
